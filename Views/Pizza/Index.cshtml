@model List<Pizza>
@using la_mia_pizzeria_static.Models.Form

<h1>Pizza</h1>

    @if(Model.Count() == 0) {<h2 class="text-center">Non sono presenti pizze nell'elenco.</h2>}
    else {
    
    @foreach(Pizza pizza in Model)
    {
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">

                    <img src="@pizza.Image" class="img-fluid rounded-start" alt="@pizza.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h2 class="card-title"><a href="@Url.Action("Dettaglio", new {id = pizza.Id})"> @pizza.Name </a></h2>
                       <h5> @pizza.Category.Name</h5>
                        <p class="card-text"></p>
                        <p class="card-title">
                            <strong>
                             @pizza.Prezzo €
                            </strong>
                        </p>
                        <p class="card-text"></p>
                        <p class="card-text"><small class="text-muted">@pizza.Description</small></p>
                        <a asp-controller="Pizza" asp-action="Modifica" asp-route-id="@pizza.Id" class="btn btn-outline-secondary btn-sm px-2">Modifica</a>
                                <p class="card-text"></p>
                        <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza.Id" method="post"> <button type="submit" class="btn btn-outline-danger btn-sm px-2">Elimina</button></form>
                    </div>
                </div>
            </div>
        </div>


    }
    
    
    
    }