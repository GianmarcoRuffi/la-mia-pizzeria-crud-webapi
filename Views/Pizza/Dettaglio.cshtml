@model Pizza


<h1>Dettaglio della pizza @Model.Name</h1>



<div class="container col-xxl-8 px-4 py-5">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
        <div class="col-10 col-sm-8 col-lg-6">
            <img src="@Model.Image" class="d-block mx-lg-auto img-fluid" alt="@Model.Name" width="700" height="500" loading="in caricamento...">
        </div>
        <div class="col-lg-6">
            <h2 class="display-3 fw-bold lh-1 mb-3">@Model.Name</h2>
            <h5 class="fs-3 fw-bold lh-1 mb-2">@Model.Category.Name</h5>
            <h3>@Model.Prezzo €</h3>
            <p class="lead">@Model.Description</p>
            <span class="fw-bold">Ingredienti Extra:</span>
            @foreach (Ingrediente ingrediente in Model.Ingrediente)
            {
                <div>
                    <span>@ingrediente.Name</span>
                </div>
            }
            <div class="d-grid gap-2 d-md-flex py-4 justify-content-md-start">
                <a asp-controller="Pizza" asp-action="Modifica" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-lg px-4">Modifica Pizza</a>
            
                <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@Model.Id" method="post"> <button type="submit" class="btn btn-outline-danger btn-lg px-4">Elimina Pizza</button></form>
            </div>
        </div>
    </div>
</div>

